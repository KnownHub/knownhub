upstream service {
    server service:8080;
}

server {
    listen       80;
    server_name  *.knownhub.com;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    location /service {
        proxy_pass   http://service/service;
        error_page   500 502 503 504  /50x.html;
        error_page   404              /404.html;
    }

    error_page   500 502 503 504  /50x.html;
    error_page   404              /404.html;
}